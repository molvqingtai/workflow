{
  "name": "@whatfa/workflow",
  "version": "1.0.0",
  "description": "Type-safe workflow primitives for long-running TypeScript agents.",
  "type": "module",
  "main": "core/dist/index.js",
  "scripts": {
    "dev": "pnpm --filter core dev",
    "build": "pnpm --filter core build",
    "lint": "npm-run-all -p lint:*",
    "check": "npm-run-all -p check:*",
    "test": "pnpm --filter __tests__ test",
    "lint:core": "pnpm --filter core lint",
    "lint:tests": "pnpm --filter __tests__ lint",
    "check:core": "pnpm --filter core check",
    "check:tests": "pnpm --filter __tests__ check",
    "prepare": "husky"
  },
  "keywords": [
    "workflow",
    "task"
  ],
  "author": "molvqingtai",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
